<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Shipment</h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= worker_payments_path %>">Home</a>
      </li>
      <li class="breadcrumb-item active">
        <strong>Payment list</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="ibox-content m-b-sm border-bottom">
    <%= form_with url: worker_payments_path, method: :get do |f| %>
      <div class="row">
        <div class="col-sm-2">
          <div class="form-group">
            <label class="col-form-label" for="name">Code</label>
            <%= f.text_field :code, placeholder: 'Code', class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label class="col-form-label" for="amount_paid">Payd amount</label>
            <%= f.number_field :amount_paid, placeholder: 'Amount paid', class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-4 row">
          <div class="form-group col-sm-6">
            <label class="col-form-label">Start Date</label>
            <%= f.date_field :start_date, placeholder: 'Delivery date', class: 'form-control' %>
          </div>
          <div class="form-group col-sm-6">
            <label class="col-form-label">End Date</label>
            <%= f.date_field :end_date, placeholder: 'Delivery date', class: 'form-control' %>
          </div>
        </div>
        <div class="col-sm-4 input-group">
          <div class="form-group">
            <label class="col-form-label" for="payment_type">Type</label>
            <select name="payment_type" id="status" class="form-control">
              <option selected></option>
              <option value="0">Account</option>
              <option value="1">cash</option>
            </select>
          </div>
          <div class="form-group">
            <label class="col-form-label" for="status">.</label>
            <span class="input-group-append">
            <%= f.submit "Search", class: 'btn btn-primary' %>
          </span>
          </div>
        </div>
      </div>
    <% end %>
    <a href="<%= new_worker_payment_path %>" class="btn btn-primary btn-xs">Create new payment</a>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-content">
          <%= render :partial => 'table' %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('.footable').footable({ paginate: false });
  });
</script>