<div class="ibox product-detail">
    <div class="ibox-content">
        <%= form_for @payment do |f| %>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Shipment:</label>
            <div class="col-sm-10">
                <%= f.text_field :shipment_id, placeholder: "choose shipment", class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Amount pay:</label>
            <div class="col-sm-10">
                <%= f.number_field :amount_paid, placeholder: "amount pay", class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Type:</label>
            <div class="col-sm-10">
                <%= f.select(:payment_type, ['account', 'cash'], {}, { :class => 'form-control' }) %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4 col-sm-offset-2">
                <%= link_to 'Cancel', worker_payments_path, class: "btn btn-white btn-sm" %>
                <button class="btn btn-primary btn-sm" type="submit">Save</button>
            </div>
        </div>
        <% end %>
    </div>
</div>
