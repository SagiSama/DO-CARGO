<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Shipment</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="<%= worker_shipments_path %>">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Shipment show</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInUp">
    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li><a class="nav-link active" data-toggle="tab" href="#tab-1"> Product info</a></li>
                    <li><a class="nav-link" data-toggle="tab" href="#tab-2"> Images</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            <fieldset>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Code:</label>
                                    <div class="col-sm-10">
                                        <%= @shipment.code %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Name:</label>
                                    <div class="col-sm-10">
                                        <%= @shipment.name %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Price:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" placeholder="price">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Note:</label>
                                    <div class="col-sm-10">
                                        <%= @shipment.note %>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Note:</label>
                                    <div class="col-sm-10">
                                        <%= @shipment.delivery_date %>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <div id="tab-2" class="tab-pane">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-stripped">
                                    <thead>
                                    <tr><th>Uploaded images</th></tr>
                                    </thead>
                                    <tbody>
                                        <% if @shipment.images.attached? %>
                                            <tr>
                                                <td>
                                                    <% @shipment.images.each do |image| %>
                                                    <%= image_tag(url_for(image), disabled: true, class: "img-preview img-preview-sm") %>
                                                    <% end %>
                                                </td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>