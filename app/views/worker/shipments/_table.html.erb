<table class="footable table table-stripped toggle-arrow-tiny" data-paging="false">
    <thead>
        <tr>
            <th data-toggle="true" class="footable-visible footable-first-column footable-sortable">Name<i class="fa fa-fw fa-sort"></i></span></th>
            <th data-hide="code" class="footable-visible">Code<span class="footable-sort-indicator"></span></th>
            <th data-hide="all" class="footable-sortable" style="display: none;">Description<span class="footable-sort-indicator"></span></th>
            <th data-hide="price" class="footable-visible">Price<span class="footable-sort-indicator"></span></th>
            <th data-hide="phone" class="footable-visible">Status<span class="footable-sort-indicator"></span></th>
            <th data-hide="delivery_date" class="footable-visible footable-sortable">Delivery date<i class="fa fa-fw fa-sort"></i><span class="footable-sort-indicator"></span></th>
            <th class="text-right footable-visible footable-last-column" data-sort-ignore="true">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @shipments.each do |shipment| %>
        <tr>
            <td>
                <span class="footable-arrow"><a>â€º</a></span>
                <%= shipment.name %>
            </td>
            <td><%= shipment.code %></td>
            <td><%= shipment.note %></td>
            <td>$43.00</td>
            <td><span class="label label-primary">Enable</span></td>
            <td><%= shipment.delivery_date %></td>
            <td class="text-right">
                <div class="btn-group">
                    <a href="<%= worker_shipment_path(shipment) %>" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> View </a>
                    <a href="<%= edit_worker_shipment_path(shipment) %>" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Edit </a>
                </div>
            </td>
        </tr>
        <% end%>
    </tbody>
    <tfoot>
        <td colspan="6">
            <ul class="float-right" id="paginator">
            <%= paginate @shipments, remote: true %>
            </ul>
        </td>
    </tfoot>
</table>

<script>
    $(document).ready(function() {
        $('.footable').footable({ paginate: false });
    });
</script>