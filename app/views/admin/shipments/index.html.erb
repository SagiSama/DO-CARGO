<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Shipment list</h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= admin_shipments_path %>">Home</a>
      </li>
      <li class="breadcrumb-item active">
        <strong>Shipment list</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInUp">
  <div class="row">
    <div class="col-lg-12">

      <div class="ibox">
        <div class="ibox-title">
          <h5>All shipments</h5>
          <div class="ibox-tools">
          </div>
        </div>
        <div class="ibox-content">
          <div class="m-b-sm m-t-sm">

            <div class="input-group">
              <div class="input-group-prepend">
                <button tabindex="-1" class="btn btn-white btn-sm" type="button"><i class="fa fa-refresh"></i> Refresh</button>
              </div>
              <input type="text" class="form-control form-control-sm">

              <div class="input-group-append">
                <button tabindex="-1" class="btn btn-primary btn-sm" type="button">Go!</button>
              </div>
            </div>
          </div>

          <div class="project-list">

            <table class="table table-hover">
              <tbody>
              <% @shipments.each do |shipment| %>
              <tr>
                <td class="project-status">
                  <% if shipment.done? %>
                    <span class="label label-primary"><%= shipment.status %></span>
                  <% else %>
                    <span class="label label-error"><%= shipment.status %></span>
                  <% end %>
                </td>
                <td class="project-title"><%= shipment.code %>
                  <br>
                  <small><%= shipment.note %></small>
                </td>
                <td class="project-completion">
                  <small>Completion with: 48%</small>
                  <div class="progress progress-mini">
                    <div style="width: 48%;" class="progress-bar"></div>
                  </div>
                </td>
                <td class="project-people">
                    <% if shipment.images.attached? %>
                      <% shipment.images.each do |image| %>
                        <%= image_tag(url_for(image), alt: 'image', size: "20", class: "rounded-circle") %>
                      <% end %>
                    <% end %>
                </td>
                <td class="project-actions">
                </td>
              </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>