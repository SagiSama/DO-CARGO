<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Project list</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="<%= admin_posts_path %>">Home</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Post show</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInUp">
    <div class="row">
        <div class="col-lg-9">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="m-b-md">
                                <a href="<%= edit_admin_post_path(@post) %>" class="btn btn-white btn-xs float-right">Edit post</a>
                                <h2><%= @post.title %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <dl class="row mb-0">
                                <div class="col-sm-4 text-sm-right">
                                    <dt>Type:</dt>
                                </div>
                                <div class="col-sm-8 text-sm-left">
                                    <dd class="mb-1"><span class="label label-warning"><%= @post.post_type %></span></dd>
                                </div>
                                <div class="col-sm-4 text-sm-right">
                                    <dt>Status:</dt>
                                </div>
                                <div class="col-sm-8 text-sm-left">
                                    <% if @post.status %>
                                        <dd class="mb-1"><span class="label label-primary">Active</span></dd>
                                    <% else %>
                                        <dd class="mb-1"><span class="label label-error">Passive</span></dd>
                                    <% end %>
                                </div>
                                <div class="col-sm-4 text-sm-right">
                                    <dt>Subject:</dt>
                                </div>
                                <div class="col-sm-8 text-sm-left">
                                    <dd class="mb-1"><%= @post.subject %></dd>
                                </div>
                                <div class="col-sm-4 text-sm-right">
                                    <dt>Note:</dt>
                                </div>
                                <div class="col-sm-8 text-sm-left">
                                    <dd class="mb-1"><%= @post.note %></dd>
                                </div>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <% if @post.image.attached? %>
                <%= image_tag(url_for(@post.image), size: '300') %>
            <% else %>
                <%= image_tag 'profile_empty.jpg', size: '300' %>
            <% end %>
        </div>
    </div>
</div>