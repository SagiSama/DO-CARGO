<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Project list</h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= admin_posts_path %>">Home</a>
      </li>
      <li class="breadcrumb-item active">
        <strong>Post list</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInUp">
  <div class="row">
    <div class="col-lg-12">

      <div class="ibox">
        <div class="ibox-title">
          <h5>All posts</h5>
          <div class="ibox-tools">
            <a href="<%= new_admin_post_path %>" class="btn btn-primary btn-xs">Create post</a>
          </div>
        </div>
        <div class="ibox-content">
          <div class="m-b-sm m-t-sm">

            <div class="input-group">
              <div class="input-group-prepend">
                <button tabindex="-1" class="btn btn-white btn-sm" type="button"><i class="fa fa-refresh"></i> Refresh</button>
              </div>
              <input type="text" class="form-control form-control-sm">

              <div class="input-group-append">
                <button tabindex="-1" class="btn btn-primary btn-sm" type="button">Go!</button>
              </div>
            </div>
          </div>

          <div class="project-list">

            <table class="table table-hover">
              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td class="project-status">
                      <% if post.status %>
                        <span class="label label-primary">Active</span>
                      <% else %>
                        <span class="label label-danger">Inactive</span>
                      <% end %>
                    </td>
                    <td class="project-title">
                      <a href="<%= admin_post_path(post) %>"><%= post.title %></a>
                      <br>
                      <small><%= post.subject %></small>
                    </td>
                    <td class="project-completion">
                      <small>Completion with: 48%</small>
                      <div class="progress progress-mini">
                        <div style="width: 48%;" class="progress-bar"></div>
                      </div>
                    </td>
                    <td class="project-people">
                      <a href="<%= admin_post_path(post) %>">
                        <% if post.image.attached? %>
                          <%= image_tag(url_for(post.image), alt: 'image', class: "rounded-circle") %>
                        <% else %>
                          <%= image_tag 'profile_empty.jpg', alt: 'image', class: 'rounded-circle' %>
                        <% end %>
                      </a>
                    </td>
                    <td class="project-actions">
                      <a href="<%= admin_post_path(post) %>" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> View </a>
                      <a href="<%= edit_admin_post_path(post) %>" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Edit </a>
                      <%= link_to 'Delete', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-white btn btn-xs btn-danger btn-outline" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>